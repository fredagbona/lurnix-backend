# Lurnix Backend Environment Configuration
# Copy this file to .env and update the values

# Server Configuration
NODE_ENV=development
PORT=5050

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/lurnix_db"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-at-least-32-characters-long"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Email Configuration (SMTP SERVER)
EMAIL_ENABLED=true
EMAIL_HOST=your-smtp-server.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-username
EMAIL_PASSWORD=your-password
EMAIL_FROM_ADDRESS=noreply@yourdomain.com
EMAIL_FROM_NAME=Your App Name
LOGO_URL="https://yourdomain.com/logo.png"

# Frontend Configuration
FRONTEND_URL="http://localhost:3000"
ALLOWED_ORIGINS="*"  # Allow all origins for development
API_BASE_URL="http://localhost:5050/api"

# OAuth Providers
GOOGLE_CLIENT_ID="your-local-google-client-id"
GOOGLE_CLIENT_SECRET="your-local-google-client-secret"
GOOGLE_CALLBACK_URL="http://localhost:5050/api/auth/google/callback"
GITHUB_CLIENT_ID="your-local-github-client-id"
GITHUB_CLIENT_SECRET="your-local-github-client-secret"
GITHUB_CALLBACK_URL="http://localhost:5050/api/auth/github/callback"

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=900000  # 15 minutes in milliseconds (can be disabled)
RATE_LIMIT_MAX=999999     # Max requests per window (set high for development)

# Admin Seed Configuration
ADMIN_SEED_ENABLED=true
ADMIN_SEED_EMAIL=admin@example.com
ADMIN_SEED_PASSWORD=StrongAdminPassword123!
ADMIN_SEED_NAME="Super Admin"

# Monitoring Configuration
LOG_LEVEL="info"
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_MONITORING=true

# OpenAI Configuration
OPENAI_API_KEY="your-openai-api-key"
OPENAI_MODEL="gpt-4o"


#PADDLE Configuration
PADDLE_API_URL=""
PADDLE_API_KEY=""
PADDLE_ENV=""
PADDLE_WEBHOOK_SECRET=""

# Planner / AI Configuration
PLANNER_PROVIDER="lmstudio" # Options: lmstudio, groq
LMSTUDIO_BASE_URL="http://localhost:1234"
LMSTUDIO_MODEL="llama-3.1-8b-instruct"
GROQ_BASE_URL="https://api.groq.com/openai/v1/chat/completions"
GROQ_API_KEY="your-groq-api-key"
GROQ_MODEL="llama-3.1-70b"
PLANNER_VERSION="2024-09-profile-context"
