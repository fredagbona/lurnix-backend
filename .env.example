# Lurnix Backend Environment Configuration
# Copy this file to .env and update the values

# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/lurnix_db"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-at-least-32-characters-long"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Email Configuration (Mailzeet)
EMAIL_ENABLED=true
MAILZEET_API_KEY="your-mailzeet-api-key"
MAILZEET_API_URL="https://api.mailzeet.com/v1/mails"
FROM_EMAIL="noreply@yourdomain.com"
FROM_NAME="Lurnix"

# Frontend Configuration
FRONTEND_URL="http://localhost:3000"
ALLOWED_ORIGINS="*"  # Allow all origins for development

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=900000  # 15 minutes in milliseconds (can be disabled)
RATE_LIMIT_MAX=999999     # Max requests per window (set high for development)

# Monitoring Configuration
LOG_LEVEL="info"
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_MONITORING=true