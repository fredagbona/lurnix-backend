# Lurnix Backend Production Environment Configuration

# Server Configuration
NODE_ENV=production
PORT=5050

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/lurnix_db"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-at-least-32-characters-long"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Email Configuration (SMTP SERVER)
EMAIL_ENABLED=true
EMAIL_HOST=smtp.hostinger.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=noreply@lurnix.tech
EMAIL_PASSWORD=your-actual-password
EMAIL_FROM_ADDRESS=noreply@lurnix.tech
EMAIL_FROM_NAME=Lurnix

# Frontend Configuration
FRONTEND_URL="https://yourdomain.com"
ALLOWED_ORIGINS="https://yourdomain.com"

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Admin Seed Configuration
ADMIN_SEED_ENABLED=true
ADMIN_SEED_EMAIL=admin@example.com
ADMIN_SEED_PASSWORD=StrongAdminPassword123!
ADMIN_SEED_NAME="Super Admin"

# Monitoring Configuration
LOG_LEVEL="info"
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_MONITORING=true
